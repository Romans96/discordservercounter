<!DOCTYPE ejs>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta charset="utf-8" />
        <meta name="author" content="Romans" />
        <style>
            body {
                overflow: hidden;
                display: flex;
                height: 100%;
                width: 100%;
                flex-direction: column;
                flex-wrap: nowrap;
                align-items: center;
                gap: 10px 20px;
                justify-content: center;
            }
            .verticalList {
                display: flex;
                order: 10;
                width: 100%;
                height: 100px;
                overflow-y: auto;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <p class="loggedMsg"><%= loggedMsg %></p>
            <p class="serverCounter"><%= serverCounter %></p>
            <table class="verticalList">
                <% if (guildsList) { %> <% for (var [key, value] of
                guildsList.entries()) { %>
                <tr>
                    <th><%= (key+1) %></th>
                    <th><%= value.name %></th>
                </tr>
                <% } %> <% } %>
            </table>
        </div>
    </body>
</html>
